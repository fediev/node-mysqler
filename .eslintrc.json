/* .eslintrc.json : r.0.2.0-pre */
{
  "root": true,
  "env": {
    "browser": true,
    "node": true,
    "jquery": true,
    "mocha": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 6
  },
  "extends": "eslint:recommended",
  "rules": {
    /* basic style rules */
    "indent": [2, 2, {"SwitchCase": 1, "VariableDeclarator": 2}],
    "quotes": [2, "single", "avoid-escape"],
    "linebreak-style": [2, "unix"],
    "semi": [2, "always"],
    "max-len": [2, 80, 2, {"ignoreComments": true, "ignoreUrls": true}],

    /* possible errors */
    "comma-dangle": [1, "always-multiline"],
    "no-console": 1,
    "no-unexpected-multiline": 2,
    "valid-jsdoc": 1, // intentional report level 1

    /* best practice */
    "accessor-pairs": 2,
    "block-scoped-var": 2,
    // "consistent-return": 2, // change when needed
    "curly": 2,
    "default-case": 2,
    "dot-notation": 2,
    "dot-location": [2, "property"],
    "eqeqeq": 2,
    "guard-for-in": 2,
    "no-alert": 2,
    "no-caller": 2,
    "no-eval": 2,
    "no-extend-native": 2,
    "no-extra-bind": 2,
    "no-fallthrough": 2,
    "no-floating-decimal": 2,
    "no-implied-eval": 2,
    "no-invalid-this": 2,
    "no-iterator": 2,
    "no-labels": 2,
    "no-lone-blocks": 2,
    "no-loop-func": 2,
    "no-multi-spaces": 2,
    "no-multi-str": 2,
    "no-native-reassign": 2,
    "no-new": 2,
    "no-new-func": 2,
    "no-new-wrappers": 2,
    "no-octal": 2,
    "no-octal-escape": 2,
    // "no-param-reassign": 2, // change when needed
    "no-process-env": 1,
    "no-proto": 2,
    // "no-redeclare": 2, // change when needed
    "no-return-assign": 2,
    "no-script-url": 2,
    "no-self-compare": 2,
    "no-sequences": 2,
    "no-throw-literal": 2,
    "no-unused-expressions": 2,
    "no-useless-call": 2,
    "no-useless-concat": 2,
    "no-void": 2,
    "no-with": 2,
    "wrap-iife": 2,
    "yoda": [2, "never"],

    /* strict mode */
    // "strict": [2, "global"], // change when needed

    /* variables */
    "no-delete-var": 2,
    // "no-shadow": 2, // change when needed
    "no-shadow-restricted-names": 2,
    "no-undef": 2,
    "no-undef-init": 2,
    "no-undefined": 2,
    "no-unused-vars": [1, {"vars": "all", "args": "after-used"}],
    "no-use-before-define": [2, "nofunc"],

    /* node.js and common.js */
    "callback-return": [2, ["cb", "clbk", "callback", "done", "next"]],
    "global-require": 2,
    // "handle-callback-err": [2, "^(err|error)$"], // change when needed
    "no-mixed-requires": 2,
    "no-new-require": 2,
    "no-path-concat": 2,
    "no-process-exit": 2,
    // "no-sync": 2, // change when needed

    /* stylistic issues */
    "array-bracket-spacing": [2, "always"],
    "block-spacing": 2,
    "brace-style": [2, "1tbs"],
    "camelcase": [2, {"properties": "never"}],
    "comma-spacing": 2,
    "comma-style": [2, "last"],
    "computed-property-spacing": [2, "never"],
    "consistent-this": [2, "self"],
    "eol-last": 2,
    "func-names": 1, // intentional report level 1
    // "func-style": [2, "declaration"], // change when needed
    "jsx-quotes": [2, "prefer-single"],
    "key-spacing": [2, {"beforeColon": false, "afterColon": true}],
    "max-nested-callbacks": [2, 3],
    "new-cap": 2,
    "new-parens": 2,
    "no-array-constructor": 2,
    "no-inline-comments": 2,
    "no-lonely-if": 2,
    "no-mixed-spaces-and-tabs": 2,
    "no-multiple-empty-lines": [2, {"max": 2}],
    "no-negated-condition": 2,
    "no-nested-ternary": 2,
    "no-new-object": 2,
    "no-spaced-func": 2,
    "no-trailing-spaces": 2,
    // "no-underscore-dangle": 2, // change when needed
    "no-unneeded-ternary": 2,
    "object-curly-spacing": [2, "always"],
    "operator-linebreak": [2, "before"],
    "padded-blocks": [2, "never"],
    "quote-props": [2, "as-needed", {"keywords": true}],
    "require-jsdoc": 1,
    "semi-spacing": [2, {"before": false, "after": true}],
    "keyword-spacing": 2,
    "space-before-blocks": [2, "always"],
    "space-before-function-paren": [2, "never"],
    "space-in-parens": [2, "never"],
    "space-infix-ops": 2,
    "space-unary-ops": [2, {"words": true, "nonwords": false}],
    "spaced-comment": [2, "always", {"exceptions": ["-", "eslint"]}]
  }
}
